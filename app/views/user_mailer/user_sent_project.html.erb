<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <style type="text/css">
      .container {
        width: 900px;
        margin: auto;
      }
      .btn {
        color: white;
        background-color: #F2C94C;
        border: 1px solid #F2C94C;
        padding: 5px 25px;
        text-decoration: none;
      }

      .center {
        text-align: center;
      }
      .background {
        background-color: white;
        padding: 30px;
      }
      body {
        background-color: #E8EAEC;
      }
      .footer {
        color: gray;
      }
      .text-info {
        color: #F2C94C;
      }
    </style>
  </head>
  <body>
    <div class="background container">
      <div class="center">
        <%= image_tag attachments['logo.png'].url, width:"200" %>
      </div>
      <div>
        <p><%= t("mailer.user_sent_project.line_1", first_name: @project.user.first_name, last_name: @project.user.last_name) %></p>
        <p><%= t("mailer.user_sent_project.line_2") %></p>
        <p><%== t("mailer.user_sent_project.line_3", client_name: @project.client_last_name) %></p>
        <p><%= t("mailer.user_sent_project.line_4") %> <%= link_to clients_project_url(slug: @project.slug), clients_project_url(slug: @project.slug), target: "_blank" %></p>
        <p><%= t("mailer.user_sent_project.line_5") %></p>
        <p><%= t("mailer.user_sent_project.line_6") %></p>
        <p><%= t("mailer.user_sent_project.line_7") %></p>
        <p><%= t("mailer.user_sent_project.line_8") %></p>
        <ul>
          <li><%= t("mailer.user_sent_project.line_9") %></li>
          <li><%= t("mailer.user_sent_project.line_10") %></li>
          <li><%= t("mailer.user_sent_project.line_11") %></li>
          <li><%= t("mailer.user_sent_project.line_12") %></li>
        </ul>
        <p><%= t("mailer.user_sent_project.line_13") %></p>
        <p><%= t("mailer.goodbye") %> <%= link_to "www.fromspayce.com", "https://www.fromspayce.com/"%></p>
      </div>
    </div>
    <div class="center footer">
      <p><%= t('mailer.footer') %></p>
    </div>
  </body>
</html>


