<div class="nav-container">
  <div class="navbar navbar-expand-sm navbar-light mb-4">
    <%= link_to root_path, class: "navbar-brand d-flex mt-2" do %>
      <%= inline_svg_tag "logo.svg", width: 200; %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <% if user_signed_in? %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item mx-5">
            <div class="d-flex align-items-center">
              <%= inline_svg_tag "upload.svg" %>
              <%= link_to t('view.application.navbar.new_transfer'), root_path, class: "nav-link" %>
            </div>
          </li>
          <li class="nav-item mx-5">
            <div class="d-flex align-items-center">
              <%= inline_svg_tag "files.svg" %>
              <%= link_to t('view.application.navbar.my_transfer'), projects_path, class: "nav-link" %>
            </div>
          </li>
          <li class="nav-item mx-5">
            <div class="d-flex align-items-center">
              <%= inline_svg_tag "config.svg" %>
              <%= link_to t('view.application.navbar.my_account'), edit_user_registration_path, class: "nav-link" %>
            </div>
          </li>
          <li class="nav-item mx-5">
            <div class="d-flex align-items-center">
              <%= inline_svg_tag "mail.svg" %>
              <%= link_to t('view.application.navbar.contact_us'), "#", class: "nav-link" %>
            </div>
          </li>
          <li class="nav-item mx-5">
            <div class="d-flex align-items-center">
              <% if I18n.locale == I18n.default_locale %>
                <%= link_to "Fr", { :locale=>'fr' }, class: "nav-link" %>
              <% else %>
                <%= link_to "En", { :locale=>'en' }, class: "nav-link" %>
              <% end %>
            </div>
          </li>
        </ul>
      </div>
      <div>
        <%= link_to t('view.application.navbar.sign_out'), destroy_user_session_path, method: :delete, class: "nav-btn" %>
      </div>
    <% else %>
      <div>
        <%= link_to t('view.application.navbar.sign_in'), new_user_session_path, class: "nav-btn", id:"sign-in" %>
        <%= link_to t('view.application.navbar.sign_up'), new_user_registration_path, class: "nav-btn", id:"sign-up" %>
      </div>
    <% end %>
  </div>
</div>


