<div class="navbar navbar-expand-sm navbar-light navbar-lewagon mb-4">
  <%= link_to root_path, class: "navbar-brand d-flex mt-2" do %>
    <%= inline_svg_tag "logo.svg", width: 200; %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <% if user_signed_in? %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item mx-5">
          <div class="d-flex align-items-center">
            <%= inline_svg_tag "upload.svg" %>
            <%= link_to "New Transfer", root_path, class: "nav-link" %>
          </div>
        </li>
        <li class="nav-item mx-5">
          <div class="d-flex align-items-center">
            <%= inline_svg_tag "files.svg" %>
            <%= link_to "My transfers", projects_path, class: "nav-link" %>
          </div>
        </li>
        <li class="nav-item mx-5">
          <div class="d-flex align-items-center">
            <%= inline_svg_tag "config.svg" %>
            <%= link_to "My Account", edit_user_registration_path, class: "nav-link" %>
          </div>
        </li>
        <li class="nav-item mx-5">
          <div class="d-flex align-items-center">
            <%= inline_svg_tag "mail.svg" %>
            <%= link_to "Contact us", "#", class: "nav-link" %>
          </div>
        </li>
      </ul>
    </div>
    <div class="navbar-button d-flex">
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-btn" %>
    </div>

  <% else %>
    <div class="navbar-button ">
      <%= link_to "LOG IN", new_user_session_path, class: "nav-btn" %>
      <%= link_to "SIGN UP", new_user_registration_path, class: "nav-btn" %>
    </div>
  <% end %>
</div>

