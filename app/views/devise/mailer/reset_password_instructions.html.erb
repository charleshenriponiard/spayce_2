<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <style type="text/css">
      .container {
        width: 900px;
        margin: auto;
      }
      .btn {
        color: white;
        background-color: #F2C94C;
        border: 1px solid #F2C94C;
        padding: 5px 25px;
        text-decoration: none;
      }

      .center {
        text-align: center;
      }
      .background {
        background-color: white;
        padding: 30px;
      }
      body {
        background-color: #E8EAEC;
      }
      .footer {
        color: gray;
      }
    </style>
  </head>
  <body>

    <div class="background container">
      <div class="center">
        <%= image_tag attachments['logo.png'].url, width:"200" %>
      </div>
      <div>
        <p><%= @resource.first_name || @resource.last_name || @resource.email %></p>

        <p><%= t('.line1') %></p>

        <p><%= link_to t('.action'), edit_password_url(@resource, reset_password_token: @token), class:"btn" %></p>
        <a href="<%= edit_password_url(@resource, reset_password_token: @token) %>"><%= edit_password_url(@resource, reset_password_token: @token) %></a>


        <p><%= t('.line2') %></p>
        <p><%= t('.line3') %></p>
        <p><%= t('.line4') %></p>
        <p><%= link_to t('.know_more'), "https://www.fromspayce.com/" %></p>
      </div>
    </div>
    <div class="center footer">
      <p><%= t('email.footer') %></p>
    </div>
  </body>
</html>




