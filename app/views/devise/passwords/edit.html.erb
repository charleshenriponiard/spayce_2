
<div class="wrapper">
  <div class=" container">
    <div class="card-connexion">
      <h1 class="text-center mb-3"><%= t('.title') %></h1>
      <%= simple_form_for(resource, as: resource_name, wrapper: :inline_form, url: password_path(resource_name), html: { method: :put })  do |f| %>
        <%= f.error_notification %>
        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>
        <div class="form-inputs">
          <div class="form-inputs">
            <%= f.input :password,
                        label: t(".new_password"),
                        required: true,
                        autofocus: true,
                        # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { placeholder: t('activerecord.attributes.user.password'), autocomplete: "new-password", class:"xl-input" } %>
            <%= f.input :password_confirmation,
                        label: "Confirm your new password",
                        required: true,
                        input_html: { placeholder: t('activerecord.attributes.user.confirm_password'), autocomplete: "new-password", class:"xl-input" } %>
          </div>
        </div>
        <div class="form-actions text-center">
          <%= f.button :submit, t('.change_my_password'), class: "btn btn-info button-connexion text-white" %>
        </div>
      <% end %>
      <div class="text-center mt-4">
        <div class="d-flex align-items-center justify-content-center">
          <%= t('.instance') %><%= link_to t('devise.shared.links.sign_up'), new_registration_path(resource_name), class: "btn btn-secondary ml-3" %>
        </div>
        <%= link_to t('devise.shared.links.sign_in'), new_user_session_path, class: "nav-btn" %>
      </div>
    </div>
  </div>
</div>
