<div class="wrapper">
  <div class="container">
    <div class="card-connexion">
      <h1 class="text-center mb-2"> <%= t('.title') %></h1>
      <div class="row mb-3">
        <div class="col-4 offset-2 progress-bar progress-bar-yellow ">
        </div>
        <div class="col-4 progress-bar">
        </div>
      </div>
      <%= simple_form_for(resource, as: resource_name, wrapper: :inline_form, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { placeholder: t('activerecord.attributes.user.email'), autocomplete: "email" }%>
            <%= f.input :password,
                        required: true,
                        hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length),
                        input_html: { placeholder: t('activerecord.attributes.user.password'), autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { placeholder: t('activerecord.attributes.user.confirm_password'), autocomplete: "new-password" } %>
          </div>
        </div>
        <div class="form-actions text-center">
        <%= f.button :submit, t("helpers.button.continue"), class: "btn btn-info button-connexion text-white" %>
        </div>
      <% end %>
      <div class="text-center">
        <div class="d-flex align-items-center justify-content-center">
          <%= t('.instance') %> <%= link_to t('.sign_in'), new_user_session_path, class: "btn btn-secondary m-4" %>
        </div>
      </div>
    </div>
  </div>
</div>
