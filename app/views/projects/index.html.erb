<div class="container">
  <h1>Easily find all your transfers</h1>
  <div class="d-flex justify-content-between my-3">
    <div>
      <%= link_to "All", projects_path, class:"btn btn-outline-purple mr-2" %>
      <%= link_to "Sent", projects_path({ filter: "sent" }), class:"btn btn-outline-blue mr-2" %>
      <%= link_to "Paid", projects_path({ filter: "paid" }), class:"btn btn-outline-green mr-2" %>
      <%= link_to "Canceled / Expired", projects_path({ filter: "canceled" }), class:"btn btn-outline-red" %>
    </div>
    <div class="d-flex justify-content-center">
      <%= form_tag(projects_path, method: :get) do  %>
          <%= text_field_tag(:search, params[:search], placeholder: "Search", class: "form-control") %>
      <% end %>
      <%= link_to projects_path, class: "close ml-2" do %>
        <%= inline_svg_tag "close.svg", class:"red-close" %>
      <% end %>
    </div>
  </div>
  <div class="card-body table-responsive">
    <table class="table table-striped">
      <thead>
        <th scope="col">#id</th>
        <th scope="col" ><%= sortable("Client", "client_last_name") %></th>
        <th scope="col" ><%= sortable("Price", "amount") %></th>
        <th scope="col" >Sent On</th>
        <th scope="col" >Status</th>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.id %></td>
            <td><%= link_to project.client_last_name, project_path(project), class:" text-yellow"%></td>
            <td><%= project.amount %></td>
            <td>Update DB</td>
            <td><%= project.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


