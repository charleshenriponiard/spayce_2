<div class="container">
  <h1>Easily find all your transfers</h1>
  <div class="d-flex justify-content-between my-3">
    <div>
      <%= link_to "All", "#", class:"btn btn-outline-purple mr-2" %>
      <%= link_to "Sent", "#", class:"btn btn-outline-blue mr-2" %>
      <%= link_to "Paid", "#", class:"btn btn-outline-green mr-2" %>
      <%= link_to "Canceled / Expired", "#", class:"btn btn-outline-red" %>
    </div>
      <%= form_tag(projects_path, method: :get) do  %>
        <div class="form-group">
          <%= text_field_tag(:search, params[:search], class:"form-control") %>
        </div>
        <div class="form-group">
          <%= submit_tag ("search"), class:"form-control"  %>
        </div>
      <% end %>
  </div>
  <ul>
    <% @projects.each do |project| %>
      <li>
        <%= link_to project.name, project_path(project) %>
        <%= project.client_last_name %>
      </li>
    <% end %>
  </ul>
</div>
