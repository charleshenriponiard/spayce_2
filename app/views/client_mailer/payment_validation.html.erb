<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <style type="text/css">
      .container {
        width: 900px;
        margin: auto;
      }
      .btn {
        color: white;
        background-color: #F2C94C;
        border: 1px solid #F2C94C;
        padding: 5px 25px;
        text-decoration: none;
      }

      .center {
        text-align: center;
      }
      .background {
        background-color: white;
        padding: 30px;
      }
      body {
        background-color: #E8EAEC;
      }
      .footer {
        color: gray;
      }
      .text-info {
        color: #F2C94C;
      }
    </style>
  </head>
  <body>
    <div class="background container">
      <div class="center">
        <%= image_tag attachments['logo.png'].url, width:"200" %>
      </div>
      <div class="">
        <h3><%= t("mailer.hello") %></h3>
        <p><%== t("mailer.payment_validation.line_1", amount: number_to_currency(@project.amount)) %></p>
        <p><%== t("mailer.payment_validation.line_2", first_name: @project.user.first_name, last_name: @project.user.last_name ) %></p>
        <%= link_to t('mailer.payment_validation.action'), clients_project_url(slug: @project.slug), class:"btn btn-info mt-2" %>
        <p><%== t("mailer.payment_validation.line_3", date: l((@project.created_at + 7.day), format: :short)) %></p>
        <p><%= t("mailer.payment_validation.line_4") %></p>
        <p><%= t("mailer.payment_validation.line_5") %></p>
        <p><%= t("mailer.goodbye") %> <%= link_to "www.fromspayce.com", "https://www.fromspayce.com/"%></p>
      </div>
    </div>
    <div class="center footer">
      <p><%= t('email.footer') %></p>
    </div>
  </body>
</html>


