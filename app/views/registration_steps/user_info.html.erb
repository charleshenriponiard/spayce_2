<div class="wrapper">
  <div class=" container">
    <div class="card-connexion">
      <h1 class="text-center mb-5">Create your free account</h1>
      <%= simple_form_for(current_user, wrapper: :inline_form, url: wizard_path, method: :put) do |f| %>
        <div class="form-inputs">
          <div class="border p-3 mb-3">
          <h4 class="text-center form-headers">Personal information</h4>
            <%= f.input :first_name,
                          autofocus: true,
                          input_html: { placeholder: "First Name", class:"xl-input" } %>
              <%= f.input :last_name,
                          autofocus: true,
                          input_html: { placeholder: "Last Name", class:"xl-input" }  %>
              <%= f.input :country,
                          collection: ["FR", "US"],
                          prompt: 'Select your country',
                          input_html: { placeholder: "Last Name", class:"xl-input" } %>
          </div>
        </div>
        <div class="border p-3">
          <h4 class="text-center form-headers">Paiement information</h4>
          <p>We use Stripe to make sure you get paid on time and to keep your personal bank and details secure. Click Save and continue to set up your payments on Stripe.</p>
        </div>
        <div class="form-actions text-center">
          <%= f.button :submit, "SAVE and CONTINUE", class: "btn btn-info button-connexion text-white mt-3" %>
        </div>
      <% end %>
      <div class="text-center mt-5">
        <div class="d-flex align-items-center justify-content-center">
          <%= link_to 'Skip this Page', next_wizard_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>

